rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function hasRole(role) {
      return request.auth != null && role in request.auth.token.roles;
    }

    match /products/{id} {
      allow read: if request.auth != null;
      allow write: if hasRole('ADMIN');
    }

    match /clients/{id} {
      allow read: if request.auth != null;
      allow write: if hasRole('ADMIN') || hasRole('SELLER');
    }

    match /suppliers/{id} {
      allow read: if request.auth != null;
      allow write: if hasRole('ADMIN') || hasRole('WAREHOUSE_MANAGER');
    }

    match /warehouses/{id} {
      allow read: if request.auth != null;
      allow write: if hasRole('ADMIN');
    }

    // Inventario solo v√≠a backend (Cloud Functions)
    match /inventory/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /sales/{saleId} {
      allow read: if request.auth != null;
      allow create: if hasRole('ADMIN') || hasRole('SELLER');
      allow update, delete: if hasRole('ADMIN');
      match /items/{itemId} {
        allow read: if request.auth != null;
        allow create: if hasRole('ADMIN') || hasRole('SELLER');
        allow update, delete: if hasRole('ADMIN');
      }
    }

    match /purchases/{purchId} {
      allow read: if request.auth != null;
      allow create: if hasRole('ADMIN') || hasRole('WAREHOUSE_MANAGER');
      allow update, delete: if hasRole('ADMIN');
      match /items/{itemId} {
        allow read: if request.auth != null;
        allow create: if hasRole('ADMIN') || hasRole('WAREHOUSE_MANAGER');
        allow update, delete: if hasRole('ADMIN');
      }
    }

    match /invoices/{id} {
      allow read: if request.auth != null;
      allow create, update: if hasRole('ADMIN') || hasRole('SELLER');
      allow delete: if hasRole('ADMIN');
    }

    // Settings (e.g., exchange rate document)
    match /settings/{doc} {
      allow read: if request.auth != null;
      allow write: if hasRole('ADMIN') || hasRole('SELLER');
    }
  }
}
